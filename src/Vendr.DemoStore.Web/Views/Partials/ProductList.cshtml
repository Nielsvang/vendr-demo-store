@inherits Umbraco.Web.Mvc.UmbracoViewPage<IEnumerable<Vendr.DemoStore.Models.ProductPage>>

@if (Model != null)
{
    <div class="flex flex-wrap -mx-3">
        @foreach (var product in Model)
        {
            <div class="px-3 mt-6 w-1/2 md:w-1/3">
                <a href="@product.Url" class="text-center hover:text-teal-400">
                    <img src="@(product.PrimaryImage != null ? Url.GetCropUrl(product.PrimaryImage, 400, 500).ToString() : "https://placehold.it/400x500")" class=""/>
                    <span class="block font-bold mt-4">@product.Parent.Name - @product.Name</span>
                    <span class="block ">$1,599.95</span>
                </a>
            </div>
        }
    </div>
}