@inherits Umbraco.Web.Mvc.UmbracoViewPage<IEnumerable<Vendr.DemoStore.Models.IProductGroupComp>>

@if (Model != null)
{
    <div class="flex flex-wrap -mx-3">
        @foreach (var group in Model)
        {
            <div class="w-1/2 md:w-1/3 lg:w-1/4 px-3 mt-6">
                @Html.Partial("ProductGroupListItem", group)
            </div>
        }
    </div>
}